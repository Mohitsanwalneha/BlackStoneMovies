
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger m-5" });
<div class="d-flex justify-content-center ">

    <form method="post">

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" name="Name" id="Name">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" name="UEmail" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" name="UPassword" id="exampleInputPassword1">
        </div>
        <div class="mb-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary align-content-center">Submit</button>
        </div>

    </form>
</div>