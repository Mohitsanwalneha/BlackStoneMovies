
@{
    ViewBag.Title = "Login";
}
<h1 class="d-flex justify-content-center mb-5 ">Login</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger m-5" });
<div class="d-flex justify-content-center ">

    <form method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" name="UEmail" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" name="UPassword" id="exampleInputPassword1">
        </div>
        <div class="mb-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary align-content-center">Submit</button>
        </div>
        <br />
        <div class="mb-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-secondary btn-outline-danger text-dark align-content-center">@Html.ActionLink("Register","Register")</button>
        </div>

    </form>
</div>